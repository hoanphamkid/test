<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EC"
    tools:context=".GiaoDienHoSoActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="120dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="12dp">

                <ImageButton
                    android:id="@+id/profile_back_button"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/profile_back"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="#FF7A33" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_burger"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:id="@+id/profile_app_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/app_name"
                        android:textColor="#FF7043"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="36dp"
                    android:layout_height="36dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <ImageView
                    android:id="@+id/profile_avatar"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile_placeholder"
                    android:contentDescription="@string/profile_avatar" />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/profile_user_name"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/profile_user_email"
                    android:textColor="#8D8D8D"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/profile_edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_profile_edit_button"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:clipToOutline="true">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_profile_edit"
                        android:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/profile_edit_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/profile_edit"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/profile_stat_posts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textColor="#FF7A33"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/profile_stat_posts"
                            android:textColor="#8D8D8D"
                            android:textSize="13sp" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/profile_stat_followers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="245"
                            android:textColor="#FF7A33"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/profile_stat_followers"
                            android:textColor="#8D8D8D"
                            android:textSize="13sp" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/profile_stat_following"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="180"
                            android:textColor="#FF7A33"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/profile_stat_following"
                            android:textColor="#8D8D8D"
                            android:textSize="13sp" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <LinearLayout
                        android:id="@+id/profile_pending_row"
                        style="@style/ProfileOptionRow"
                        android:layout_marginTop="12dp">

                        <ImageView
                            style="@style/ProfileOptionIcon"
                            android:src="@drawable/ic_profile_pending" />

                        <TextView
                            style="@style/ProfileOptionText"
                            android:text="@string/profile_pending" />

                        <TextView
                            android:id="@+id/profile_pending_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/bg_profile_badge"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ImageView
                            style="@style/ProfileOptionChevron"
                            android:src="@drawable/ic_chevron_right" />
                    </LinearLayout>

                    <View style="@style/ProfileDivider" />

                    <LinearLayout
                        android:id="@+id/profile_saved_row"
                        style="@style/ProfileOptionRow">

                        <ImageView
                            style="@style/ProfileOptionIcon"
                            android:src="@drawable/ic_profile_saved" />

                        <TextView
                            style="@style/ProfileOptionText"
                            android:text="@string/profile_saved" />

                        <ImageView
                            style="@style/ProfileOptionChevron"
                            android:src="@drawable/ic_chevron_right" />
                    </LinearLayout>

                    <View style="@style/ProfileDivider" />

                    <LinearLayout
                        android:id="@+id/profile_history_row"
                        style="@style/ProfileOptionRow">

                        <ImageView
                            style="@style/ProfileOptionIcon"
                            android:src="@drawable/ic_profile_history" />

                        <TextView
                            style="@style/ProfileOptionText"
                            android:text="@string/profile_history" />

                        <ImageView
                            style="@style/ProfileOptionChevron"
                            android:src="@drawable/ic_chevron_right" />
                    </LinearLayout>

                    <View style="@style/ProfileDivider" />

                    <LinearLayout
                        android:id="@+id/profile_favorite_row"
                        style="@style/ProfileOptionRow">

                        <ImageView
                            style="@style/ProfileOptionIcon"
                            android:src="@drawable/ic_profile_favorite" />

                        <TextView
                            style="@style/ProfileOptionText"
                            android:text="@string/profile_favorite" />

                        <ImageView
                            style="@style/ProfileOptionChevron"
                            android:src="@drawable/ic_chevron_right" />
                    </LinearLayout>

                    <View style="@style/ProfileDivider" />

                    <LinearLayout
                        android:id="@+id/profile_settings_row"
                        style="@style/ProfileOptionRow">

                        <ImageView
                            style="@style/ProfileOptionIcon"
                            android:src="@drawable/ic_profile_settings" />

                        <TextView
                            style="@style/ProfileOptionText"
                            android:text="@string/profile_settings" />

                        <ImageView
                            style="@style/ProfileOptionChevron"
                            android:src="@drawable/ic_chevron_right" />
                    </LinearLayout>

                    <View style="@style/ProfileDivider" />

                    <LinearLayout
                        android:id="@+id/profile_help_row"
                        style="@style/ProfileOptionRow">

                        <ImageView
                            style="@style/ProfileOptionIcon"
                            android:src="@drawable/ic_profile_help" />

                        <TextView
                            style="@style/ProfileOptionText"
                        android:text="@string/profile_help" />

                        <ImageView
                            style="@style/ProfileOptionChevron"
                            android:src="@drawable/ic_chevron_right" />
                    </LinearLayout>

                    <View style="@style/ProfileDivider" />

                    <LinearLayout
                        android:id="@+id/profile_logout_row"
                        style="@style/ProfileOptionRow"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            style="@style/ProfileOptionIcon"
                            android:src="@drawable/ic_profile_logout" />

                        <TextView
                            style="@style/ProfileOptionText"
                            android:text="@string/profile_logout" />

                        <ImageView
                            style="@style/ProfileOptionChevron"
                            android:src="@drawable/ic_chevron_right" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/profile_bottom_nav_container"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/profile_tab_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_tab_home_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_nav_home"
                    android:tint="@color/bottom_nav_inactive" />

                <TextView
                    android:id="@+id/profile_tab_home_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/nav_home"
                    android:textColor="@color/bottom_nav_inactive"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_tab_hot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_tab_hot_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_nav_fire"
                    android:tint="@color/bottom_nav_inactive" />

                <TextView
                    android:id="@+id/profile_tab_hot_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/nav_hot"
                    android:textColor="@color/bottom_nav_inactive"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_tab_random"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_tab_random_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_nav_shuffle"
                    android:tint="@color/bottom_nav_inactive" />

                <TextView
                    android:id="@+id/profile_tab_random_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/nav_random"
                    android:textColor="@color/bottom_nav_inactive"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_tab_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_tab_profile_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_nav_profile"
                    android:tint="@color/bottom_nav_active" />

                <TextView
                    android:id="@+id/profile_tab_profile_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/nav_profile"
                    android:textColor="@color/bottom_nav_active"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profile_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="96dp"
        android:contentDescription="@string/home_add_recipe"
        app:backgroundTint="#FF7A33"
        app:srcCompat="@drawable/ic_nav_add"
        app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

